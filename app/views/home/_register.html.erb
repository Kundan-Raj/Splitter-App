<!-- Start of Modal Register -->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" id="register-dialog">
            <div class="modal-content" id="register-content" >
                <div class="row">
                    <div class="col-sm-4" id="reg-col-4">
                        <div id="ls-reg-Modal">
                            <p id="reg-brand">
                                <span class="reg-s">$</span>
                                <span class="reg-plitter">plitter</span>
                            </p>
                            <span Class="reg-split">SPLIT IT UP</span>
                        </div>
                    </div>
                    <div class="reg-col6">
                        <%= image_tag("/assets/login/close.png", alt: "applestore_button", type: "button", id: "reg-modal-close", class:"close", "data-dismiss":"modal") %>
                        <br/>
                        <p id="reg-cont-header">REGISTER</p>
                        
                        <div class="login-form">
                            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= render "devise/shared/error_messages", resource: resource %>
                                <div class="form-group">
                                    <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control", id:"user",  onchange:"hideIcon(this);", Placeholder:"Name"%>
                                </div>
                                
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"e-mail",  onchange:"hideIcon(this);", Placeholder:"Email"%>
                                </div>
                                
                                <div class="form-group">
                                    <%= f.text_field :phn_no, autofocus: true, autocomplete: "phn_no", class:"form-control", id:"phn",  onchange:"hideIcon(this);", Placeholder:"Phone number"%>
                                </div>
                                
                                <div class="form-group">
                                    <% if @minimum_password_length %>
                                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %>
                                    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password", id:"pwd",  onchange:"hideIcon(this);", Placeholder:"Password" %>
                                </div>
                                
                                <div class="form-group">
                                    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"pwd",  onchange:"hideIcon(this);", Placeholder:"Confirm password" %>
                                </div>
                                <button type="submit" class="btn btn-warning rounded-pill" id="reg-btn">Sign Up</button>
                            <% end %>
                            <p></p>
                            <p id="reg-para1">If you already have an account,<a href="#" data-toggle="modal" data-target="#loginModal" data-dismiss="modal" id="reg-link"> just login.</a></p>
                            <br/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>  
<!-- End of Modal Register -->
